<div class="container">
  <h2> <%= @user.first_name %>'s Profile </h2>
  <hr>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <img class="profile-pic" src="http://websterinteriors.com/wp-content/uploads/2017/01/default_avatar-2.gif">
        <br>
        <br>
        <p><%= @user.first_name %> <%= @user.last_name %></p>
        <p>Member since: <%= @user.created_at.month %>/<%= @user.created_at.year %></p>
        <p>Current city: <%= @user.current_city %></p>

        <%= link_to "Edit profile", edit_user_path, class: "btn btn-outline-info btn-sm"%>
        <%= link_to "Delete profile", @user, method: :delete, class: "btn btn-outline-danger btn-sm"%>

      </div>
      <div class="col-md-8">
        <% @user.posts.each do |x| %>
          <div class="row">
            <div class="col-md-10">
              <h4> <%= x.title %> </h4>
              <p> <%= x.content %>
              <br>
              <%= link_to "more...", x %>
              </p>
            </div>
            <div class="col-md-2">
              <%= link_to image_tag("pencil_icon.png", class: "post-icon"), edit_post_path(x) %>
              <%= link_to image_tag("trashcan_icon.png", class: "post-icon"), @post, method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
